      <% else %>
        <div>
          <div class="button-box">
            <%= link_to("Ver o cardapio", standard_cakes_path, class:"btn-outline")  %>
          </div >
          <div class="button-box">
            <%= link_to("Montar o meu bolo", new_customized_cake_path, class:"btn-outline")  %>
