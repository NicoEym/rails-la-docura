      <p >Um docinho gostoso</p>

      <% if user_signed_in? %>
        <% if current_user.admin? %>
         <div>
          <div class="button-box">
            <%= link_to("Mes saisons", "#", class: "btn-outline") %>
          </div >
          <div class="button-box">
            <%= link_to("Sauveteurs", "#", class:"btn-outline")  %>
