<div class="row">
  <% @cakes.each do |cake| %>
    <div class="col-xs-12 col-md-4">
      <div class="card-cake" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cake.image_url %>);">
        <%= link_to("", cake_path(cake.id), class:"card-link")  %>
         <div>
          <h2 class="text-center"><%= cake.name %> </h2>
        </div>
      </div>
    </div>
  <% end %>
</div>
