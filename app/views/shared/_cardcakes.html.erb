<div class="row">
  <% @cakes.each do |cake| %>
    <div class="col-xs-12 col-md-4">
      <% if cake.photo.attached? %>
         <div class="card-cake" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://res.cloudinary.com/dzxrdf9za/image/upload/v1597530836/<%=cake.photo.key%>.png');">
          <% else %>
          <div class="card-cake" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1534766555764-ce878a5e3a2b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60');">
      <% end %>

        <%= link_to("", cake_path(cake.id), class:"card-link")  %>
         <div>
          <h2 class="text-center"><%= cake.name %> </h2>
          <p>R$ <%= cake.price %></p>
          <% if user_signed_in? && current_user.admin? %>
            <p>
              <%= cake.on_the_menu == true ?  "No cardápio" : "Não está visivel no cardápio" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
